<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE config PUBLIC
        "-//jfilter mapping DTD 1.0//EN"
        "https://rkonovalov.github.io/jfilter-schema-1.1.dtd">
<config>
    <controller class-name="com.jfilter.filter.FileFilterTest">
        <strategy attribute-name="ROLE" attribute-value="ADMIN">
            <filter class="com.jfilter.mock.MockUser">
                <field name="id"/>
            </filter>
            <filter class="com.jfilter.mock.MockUser">
                <field name="password"/>
            </filter>
            <filter class="com.jfilter.mock.MockUser">
                <field name="email"/>
                <field name="hash"/>
            </filter>
        </strategy>
        <strategy attribute-name="ROLE" attribute-value="USER">
            <filter class="com.jfilter.mock.MockUser">
                <field name="id"/>
                <field name="password"/>
            </filter>
            <filter class="com.jfilter.mock.MockUser">
                <field name="email"/>
                <field name="hash"/>
            </filter>
        </strategy>
    </controller>

</config>